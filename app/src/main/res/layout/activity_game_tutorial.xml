<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3ebd9"
    tools:context=".gameTutorial">


    <TextView
        android:id="@+id/slashTut"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="79dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="/"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tvCurrentPage"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="-105dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/slashTut"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tvTotalPage"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-105dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/slashTut"
        android:gravity="center"
        android:text="10"
        android:textColor="#000000"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/btnPreviousTut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#090000"
        app:srcCompat="@android:drawable/ic_media_rew"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="656dp" />

    <ImageButton
        android:id="@+id/btnNextTut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#000000"
        app:srcCompat="@android:drawable/ic_media_ff"
        tools:layout_editor_absoluteX="321dp"
        tools:layout_editor_absoluteY="654dp" />

    <ImageView
        android:id="@+id/ivTutorial"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:padding="10dp"
        android:layout_below="@+id/slashTut"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvTutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivTutorial"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="sans-serif-thin"
        android:lineSpacingExtra="3sp"
        android:text="content content content content content content content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnStartQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Start Quiz"
        android:textColor="@color/black"
        android:backgroundTint="#c0d3d9 "
        android:textAlignment="center"
        />
</RelativeLayout>